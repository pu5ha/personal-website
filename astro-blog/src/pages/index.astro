---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Astro Markdown Blog">
  <h1 style="font-size: 2.4rem; margin-bottom: 0.5rem;">Astro Markdown Blog</h1>
  <p style="margin-bottom: 1.75rem; color: #9ca3af;">
    A minimal Astro 5 site powered by simple Markdown posts.
  </p>

  <a
    href="/blog"
    style="
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.6rem 1rem;
      border-radius: 999px;
      background: linear-gradient(to right, #a855f7, #22c55e);
      color: #0b1120;
      font-weight: 600;
      text-decoration: none;
    "
  >
    View the blog
  </a>
</BaseLayout>


